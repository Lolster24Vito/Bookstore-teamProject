@model IEnumerable<Knjizara.Models.Books.Book>

@{
    ViewData["Title"] = "DeletedBooks";
}

<style>
    h1 {
        margin: 3rem;
    }

    #container {
        text-align: center;
        margin-top: 3rem;
    }

    #back a {
        padding-left: 40%;
    }

    table {
        width: 90vw;
        margin: 2rem auto;
    }

    th, td {
        border-bottom: 2px solid var(--brown);
        margin: 2rem;
        padding: 2rem 0.5rem 2rem 1rem;

    }

    p { 
        margin: 2rem;
    }

</style>


<div id="container">
<h1>Deleted Books</h1>

@using (Html.BeginForm())
{
    <p>
        Search: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<p>
    <a asp-action="Index">Back to Books</a>
</p>


<table class="table" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceForBorrowing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceForBuying)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockAvailabilty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isbn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceForBorrowing)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceForBuying)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockAvailabilty)
                </td>
                <td>
                    <!-- TODO: if empty or invalid show default image -->
                    <img src=@item.CoverURL asp-append-version="true" width="100">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LongDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
            </tr>
        }
    </tbody>
</table>
