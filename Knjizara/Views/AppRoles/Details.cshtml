
@model IEnumerable<Knjizara.Models.ViewModels.RolesUsersViewModel>

@{
    ViewData["Title"] = "UsersRolesEdit";
}

<style>

    #container {
        margin-top: 10vh;
        text-align: center;
    }

    table {
        width: 75vw;
        margin: auto;
    }

    th, td {
        border-bottom: 2px solid var(--brown);
    }

    p { 
        margin: 2rem;
    }

</style>

<div id="container" class="width100vw">

<h1>Add admins</h1>

@using (Html.BeginForm())
{
    <p>
        Search: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table" cellspacing="0">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>

            <td>
            @Html.DisplayFor(modelItem => item.Email)
            </td>
        <td>@string.Join(" , ", item.Roles)</td>
        <td>
                    @if (item.Roles.Count == 0)
                    {
                    <a asp-action="AddAdmin" asp-route-id="@item.UserId">Add as admin</a>
                    }
        </td>
        <td>
                    @if (item.Roles.Count != 0&&item.Email!="Admin@gmail.com")
                    {
        <a asp-action="RemoveAdmin" asp-route-id="@item.UserId">Remove admin</a>
                        
                    }
                </td>
        </tr>
}

    </tbody>
</table>

</div>
