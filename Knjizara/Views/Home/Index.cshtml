	<script>

		const headlines = document.getElementById("headlines");

		const headlineWords = [
			"is a bookstore.",
			"has all your favourite books.",
			"has all your favourite authors.",
			"has books for all ages."
		];

		let i = 0;

		headlines.innerHTML = headlineWords[0];

		const changeHeadlines = () => {

			headlines.classList.add("show");

			headlines.innerHTML = headlineWords[i];

			setTimeout(() => {headlines.classList.remove("show")}, 1800);
		
			if (i < headlineWords.length - 1) {
				i++;
			}
			else {
				i = 0;
			}
		};

		setInterval(changeHeadlines, 2500);

